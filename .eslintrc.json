{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "comma-dangle": 0,
    "max-len": 0,
    "arrow-body-style": 0,
    "object-shorthand": 0,
    "linebreak-style": 0,
    "no-plusplus": 0,
    "class-methods-use-this": 0
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": ["phaser", "pixi", "p2"]
  }
}
